<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <TextView
        android:id="@+id/red"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android
        android:background="#FF0000"
        android:text="RED"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/orange"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:layout_toRightOf="@id/red"
        android:background="#FFA500"
        android:text="ORANGE"
        android:gravity="center"
        android:textColor="#000000"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/yellow"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:layout_toRightOf="@id/orange"
        android:background="#FFFF00"
        android:text="YELLOW"
        android:gravity="center"
        android:textColor="#000000"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/green"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:layout_below="@id/red"
        android:background="#008000"
        android:text="GREEN"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/blue"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:layout_below="@id/orange"
        android:layout_toRightOf="@id/green"
        android:background="#0000FF"
        android:text="BLUE"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/indigo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/yellow"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="73dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@id/blue"
        android:background="#4B0082"
        android:gravity="center"
        android:text="INDIGO"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/violet"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:layout_below="@id/green"
        android:layout_centerHorizontal="true"
        android:background="#EE82EE"
        android:text="VIOLET"
        android:gravity="center"
        android:textColor="#000000"
        android:textStyle="bold"/>
</RelativeLayout>
