<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#000000">

    <TextView
        android:id="@+id/red"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="#FF0000"
        android:text="RED"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/orange"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toEndOf="@id/red"
        android:layout_alignTop="@id/red"
        android:layout_marginStart="16dp"
        android:background="#FFA500"
        android:text="ORANGE"
        android:gravity="center"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/yellow"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toEndOf="@id/orange"
        android:layout_alignTop="@id/orange"
        android:layout_marginStart="16dp"
        android:background="#FFFF00"
        android:text="YELLOW"
        android:gravity="center"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/green"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/red"
        android:layout_alignStart="@id/red"
        android:layout_marginTop="16dp"
        android:background="#008000"
        android:text="GREEN"
        android:gravity="center"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/blue"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toEndOf="@id/green"
        android:layout_alignTop="@id/green"
        android:layout_marginStart="16dp"
        android:background="#0000FF"
        android:text="BLUE"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/indigo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toEndOf="@id/blue"
        android:layout_alignTop="@id/blue"
        android:layout_marginStart="16dp"
        android:background="#4B0082"
        android:text="INDIGO"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/violet"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/green"
        android:layout_alignParentStart="true"
        android:layout_marginTop="156dp"
        android:background="#EE82EE"
        android:gravity="center"
        android:text="VIOLET"
        android:textColor="#000000"
        android:textStyle="bold" />
</RelativeLayout>